<Window x:Class="DuszaWpfApp.Windows.GameStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DuszaWpfApp.Windows"
        mc:Ignorable="d"
        Title="Game Statistics" Height="450" Width="800" MinWidth="360">
    <Grid x:Name="MainContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="10">Game Statistics</TextBlock>
                <Button MaxWidth="160" Margin="10" Height="25" Click="ToNavigationWindow" Content="Back to Navigation"/>
                <StackPanel HorizontalAlignment="Center" Margin="10" Name="Container">

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
