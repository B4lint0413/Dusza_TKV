<UserControl x:Class="DuszaWpfApp.UserControls.UserHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DuszaWpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Canvas Width="800" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Gray">
        <Viewbox Width="200" Height="40" HorizontalAlignment="Left">
            <TextBlock FontWeight="Bold" Foreground="White" Margin="10" FontSize="14" x:Name="PlayerInfo"/>
        </Viewbox>
    </Canvas>
</UserControl>
