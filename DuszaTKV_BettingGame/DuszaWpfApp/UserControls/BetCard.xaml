<UserControl x:Class="DuszaWpfApp.UserControls.BetCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DuszaWpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="125" d:DesignWidth="320">
    <Canvas x:Name="Card" HorizontalAlignment="Center" Margin="10" Height="150" Width="320">
        <Border x:Name="Border" BorderBrush="Blue" BorderThickness="2" CornerRadius="15 15 15 20"
                Width="320" Height="150" Margin="5">
            <Grid x:Name="Grid" HorizontalAlignment="Center" Width="320" Height="150">
                <TextBlock x:Name="Header" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5" FontSize="25" FontWeight="Bold"/>
                <Viewbox x:Name="Content" HorizontalAlignment="Center" Height="80" Width="200" VerticalAlignment="Center">
                    <TextBlock x:Name="Body" HorizontalAlignment="Center" Margin="10" Padding="5" VerticalAlignment="Center"/>
                </Viewbox>
                <Button Height="25" Margin="20 10" VerticalAlignment="Bottom" Click="MakeBetWindow">Bet</Button>
            </Grid>
        </Border>
    </Canvas>
</UserControl>
