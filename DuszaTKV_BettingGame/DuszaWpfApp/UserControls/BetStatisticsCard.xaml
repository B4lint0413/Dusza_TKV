<UserControl x:Class="DuszaWpfApp.UserControls.BetStatisticsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DuszaWpfApp.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas x:Name="Card" HorizontalAlignment="Center" Margin="10" Height="150" Width="320">
        <Border BorderBrush="Blue" BorderThickness="2" CornerRadius="15 15 15 20"
                Width="320" Height="150" Margin="5">
            <StackPanel HorizontalAlignment="Center" Width="320" Height="150">
                <TextBlock x:Name="Name" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5" FontSize="25" FontWeight="Bold"/>
                <TextBlock x:Name="NumberOfBets" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontSize="14"/>
                <TextBlock x:Name="OverallStakes" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontSize="14"/>
                <TextBlock x:Name="OverallPointsWon" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" FontSize="14"/>
            </StackPanel>
        </Border>
    </Canvas>
</UserControl>
