<Window x:Class="DuszaWpfApp.PlacedBets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuszaWpfApp"
        mc:Ignorable="d"
        Title="PlacedBets" Height="450" Width="800">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="Bold">Bets You Have Placed</TextBlock>
        <ScrollViewer>
            <StackPanel x:Name="Container"/>
        </ScrollViewer>
    </StackPanel>
</Window>
